{
    "manifest_version": 3,
    "name": "DBX File Finder",
    "version": "1.0",
    "description": "Download or open the related dropbox task folder",
    "permissions": ["activeTab", "tabs", "downloads", "downloads.shelf"],
    "web_accessible_resources": [
      {
        "resources": ["images/*"],
        "matches": ["http://*/*", "https://*/*"]
      }
    ],
    "content_scripts": [{
      "matches": ["https://hyperiondev.cogrammar.com/reviewer/dashboard/", "https://*.hyperiondev.cogrammar.com/reviewer/generate_review/*"],
      "css": ["style.css"],
      "js": ["Dropbox-sdk.min.js","content.js"]
    }],
    "action": {
        "default_popup": "popup.html"
      }
  }