{
  "manifest_version": 3,
  "name": "DBX File Finder",
  "version": "2.15.18",
  "description": "Download or open the related dropbox task folder",
  "permissions": [
    "activeTab",
    "tabs",
    "downloads",
    "downloads.shelf",
    "notifications"
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://hyperiondev.cogrammar.com/reviewer/dashboard/",
        "https://*.hyperiondev.cogrammar.com/reviewer/generate_dfe_review/*",
        "https://*.hyperiondev.cogrammar.com/reviewer/generate_review/*",
        "https://*.hyperiondev.cogrammar.com/reviewer/student/reviews/*"
      ],
      "css": [
        "style.css",
        "loaders.css",
        "feedbackFields.css",
        "scoreBoard.css",
        "dashboard.css"
      ],
      "js": [
        "Dropbox-sdk.min.js",
        "content.js",
        "feedbackFields.js",
        "dashboardScripts.js",
        "studentReviewPage.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
